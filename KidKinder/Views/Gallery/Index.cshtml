@model List<KidKinder.Entites.Gallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Galeri</h5>
                        <span>Galeri ile iligli işlemler</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table table-hover">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Image</th>
                                        <th>Status</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.GalleryId</td>
                                            <td><img src="@item.ImageUrl" alt="user image" class="img-square img-100 align-top m-r-15"></td>
                                            <td>@item.Status</td>
                                            <td><a href="/Gallery/DeleteImage/@item.GalleryId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Gallery/UpdateImage/@item.GalleryId" class="btn btn-success">Güncelle</a></td>
                                            @if (item.Status)
                                            {
                                                <td><a href="/Gallery/StatusPassiveImage/@item.GalleryId" class="btn btn-outline-danger">Pasif Yap</a></td>
                                            }
                                            else if (!item.Status)
                                            {
                                                <td><a href="/Gallery/StatusActiveImage/@item.GalleryId" class="btn btn-outline-success">Aktif Yap</a></td>
                                            }

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Gallery/CreateImage/" class="btn btn-primary">Yeni Image Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

