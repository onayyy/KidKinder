
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Header Start -->
@Html.Action("ContactHeaderPartial", "UIContact")
<!-- Header End -->
<!-- Contact Start -->
<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2">Temas Kurmak</span>
            </p>
            <h1 class="mb-4">Herhangi Bir Soru İçin Bize Ulaşın</h1>
        </div>
        <div class="row">
            <div class="col-lg-7 mb-5">
                <div class="contact-form">
                    <div id="success"></div>
                    <form action="@Url.Action("CreateMessage","UIContact")" method="post">
                        <div class="control-group">
                            <input type="text"
                                   class="form-control"
                                   id="name"
                                   name="NameSurname"
                                   placeholder="Your Name"
                                   required="required"
                                   data-validation-required-message="Please enter your name" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="Email"
                                   placeholder="Your Email"
                                   required="required"
                                   data-validation-required-message="Please enter your email" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="text"
                                   class="form-control"
                                   id="subject"
                                   name="Subject"
                                   placeholder="Subject"
                                   required="required"
                                   data-validation-required-message="Please enter a subject" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control"
                                      rows="6"
                                      id="message"
                                      name="Message"
                                      placeholder="Message"
                                      required="required"
                                      data-validation-required-message="Please enter your message"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        <div>
                            <button class="btn btn-primary py-2 px-4"
                                    type="submit"
                                    id="sendMessageButton">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            @Html.Action("ContactAddressPartial", "UIContact")
        </div>
    </div>
</div>

<div class="container py-5">
    <h2>Konum Bilgisi</h2>
    <br />
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d103000.36113302049!2d36.08322792152431!3d36.220996753541066!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1525c24ab71e4761%3A0x9151857a8d1bab72!2zQW50YWt5YSwgS8O8w6fDvGtkYWx5YW4sIEFudGFreWEvSGF0YXk!5e0!3m2!1str!2str!4v1709827455944!5m2!1str!2str" width="1000" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
    </iframe>

</div>
<!-- Contact End -->
