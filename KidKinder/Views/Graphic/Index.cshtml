
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<html>
<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['KidKinder', 'İstatistik'],
            ['Matematik',@ViewBag.MatematikCount],
            ['Resim Çizim', @ViewBag.ResimCizimCount],
            ['Robotik Kodlama',@ViewBag.RobotikKodlamaCount],
            ['İngilizce',  @ViewBag.ingilizceCount],
            ['İspanyolca',@ViewBag.ispanyolcaCount]
        ]);
        var options = {
          title: 'Öğretmen Branş Dağılımı',
          is3D: true,
        };

        var chart = new google.visualization.PieChart(document.getElementById('myChart'));
        chart.draw(data, options);
      }
    </script>
</head>
<body>
    <div id="myChart" style="width: 900px; height: 500px; margin-top:120px; margin-left:250px;"></div>
</body>
</html>


