@model KidKinder.Entites.BookASeat

<div class="col-lg-5">
    <div class="card border-0">
        <div class="card-header bg-secondary text-center p-4">
            <h1 class="text-white m-0">Book A Seat</h1>
        </div>
        <div class="card-body rounded-bottom bg-primary p-5">
            <form action="@Url.Action("CreateBookASeatForUI","UIBookASeat")" method="post">
                <div class="form-group">
                    <input type="text"
                           name="Name"
                           class="form-control border-0 p-4"
                           placeholder="Adınız"
                           required="required" />
                </div>
                <div class="form-group">
                    <input type="email"
                           name="Email"
                           class="form-control border-0 p-4"
                           placeholder="Email"
                           required="required" />
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(x => x.ClassRoomId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                </div>
                <div>
                    <button class="btn btn-secondary btn-block border-0 py-3"
                            type="submit">
                        Book Now
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
